<!DOCTYPE html>
  <html>
    <%- include('./partials/head.ejs')%>
    <body>
      <%- include('./partials/nav.ejs')%>
            <div class="all-notes content" id="body">

              <h4 id="welcome">Welcome to NOOTE,your best note-taking webapp
            </h4>
        <h2>ALL NOTES</h2>
        <% if (notes.length > 0) { %>
         <% notes.forEach(note => { %>
          
          <a class="single" href="/NOTES/<%= note._id %>">
          <h2 class="title"> <%= note.header %></h2>
          </a>
          
          <% }) %> 
        <% } else { %>
          <p>You have no notes yet click 'ADD NOTE' to start your note taking experience</p>
         
        <% } %>
        <button id="add">
          <a href="/note/create">
            ADD NOTE
            </a>
         </button>
        </div>
        
        
        <div class="site-footer" id="footer">
          <%- include('./partials/footer.ejs')%>
                </div>
                </body>
                </html>